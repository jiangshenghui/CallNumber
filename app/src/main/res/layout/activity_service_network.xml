<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green_00"
        android:layout_height="@dimen/x180">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_ff"
            android:textSize="20sp"
            android:text="服务网点列表"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/y100"
            android:background="@drawable/set_r8_bg_shape"
            android:layout_centerVertical="true"
            android:textColor="@color/color_ff"
            android:layout_alignParentRight="true"
            android:text="设置"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/contentView"
                    android:layout_width="match_parent"
                    android:layout_above="@+id/ll_btn_bottom"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_btn_bottom"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="60dp">
                    <include
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        layout="@layout/operation_view">
                    </include>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/green_00"
            android:layout_weight="3"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>